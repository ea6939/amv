<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.amv.MainActivity" >
    
    <RelativeLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/rl1" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vector 1:" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView1"
        android:inputType="number"
        android:textSize="15dp" />
    
    <EditText
        android:id="@+id/et2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/et1"
        android:inputType="number"
        android:textSize="15dp" />
    
    <EditText
        android:id="@+id/et3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/et2"
        android:inputType="number"
        android:textSize="15dp" />

    </RelativeLayout>
    
    <RelativeLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/rl2"
			android:layout_below="@+id/rl1" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vector 2:" />

    <EditText
        android:id="@+id/et4"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView2"
        android:inputType="number"
        android:textSize="15dp" />
    
    <EditText
        android:id="@+id/et5"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/et4"
        android:inputType="number"
        android:textSize="15dp" />
    
    <EditText
        android:id="@+id/et6"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/et5"
        android:inputType="number"
        android:textSize="15dp" />

    </RelativeLayout>
    
    <RelativeLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/rl3"
			android:layout_below="@+id/rl2"
			android:visibility="gone" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vector 3:" />

    <EditText
        android:id="@+id/et7"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView3"
        android:inputType="number"
        android:textSize="15dp" />
    
    <EditText
        android:id="@+id/et8"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/et7"
        android:inputType="number"
        android:textSize="15dp" />
    
    <EditText
        android:id="@+id/et9"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/et8"
        android:inputType="number"
        android:textSize="15dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
		android:gravity="center"
        android:layout_below="@+id/rl3"
        android:text="Choose a method" />
    
    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
		android:gravity="center"
        android:layout_below="@+id/b1"
        android:text="Calculate" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b2"
        android:layout_centerInParent="true"
		android:gravity="center"
        android:text=""
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
</RelativeLayout>